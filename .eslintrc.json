{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },

    "extends": ["standard", "prettier"],

    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": [2, 4],
        "new-cap": [
            0,
            {
                "capIsNew": true,
                "newIsCap": false
            }
        ]
    }
}
